# =============================================================================
# Environment Variables Template
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------

# Base URL of the application (used for auth callbacks and CORS)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Database (Turso)
# -----------------------------------------------------------------------------

# Turso database URL
# - Development: file:local.db
# - Production: libsql://your-database.turso.io
TURSO_DATABASE_URL=file:local.db

# Turso authentication token (not needed for local development)
# Get from: https://turso.tech/app
TURSO_AUTH_TOKEN=

# -----------------------------------------------------------------------------
# Authentication (Better Auth)
# -----------------------------------------------------------------------------

# Secret key for signing auth tokens (min 32 characters)
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-min-32-characters-long

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------

# Log level: trace, debug, info, warn, error, fatal
# Default: debug (development), info (production)
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Error Tracking (Sentry)
# -----------------------------------------------------------------------------

# Sentry DSN for error tracking (get from sentry.io project settings)
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=

# Sentry organization and project (for source map uploads)
SENTRY_ORG=
SENTRY_PROJECT=

# Sentry auth token (for CI/CD source map uploads)
# Get from: https://sentry.io/settings/auth-tokens/
SENTRY_AUTH_TOKEN=
